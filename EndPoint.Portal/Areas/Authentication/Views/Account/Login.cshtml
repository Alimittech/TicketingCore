@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EndPoint.Portal.Areas.Authentication.Models.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Authentication/Views/Shared/_LayoutAuth.cshtml";
}

<script>
    $('#modal-loader').modal('show');
</script>

<div class="bg-btm"></div>
<div class="container auth">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="auth-logo">
                <img src="~/img/logo/logo.png" alt="logo" width="200" />
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-4 text-center">
                                <h3 class="card-title text-center pb-0 fs-3"><strong>Welcome to Aliasys</strong></h3>
                            </div>
                            <form class="row g-3" autocomplete="off" asp-route="Login" method="post">
                                <span asp-validation-for="DomainName" class="text-danger"></span>
                                <input type="hidden" asp-for="DomainName" />
                                <div class="col-12">
                                    <label asp-for="UserName" class="col-form-label">Username</label>
                                    <input asp-for="UserName" class="form-control" id="username" autofocus placeholder="Enter your username">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="Password" class="col-form-label">Password</label>
                                    <input asp-for="Password" class="form-control" id="password" placeholder="Enter Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-12 mb-3 pt-3">
                                    <button id="btnLoginSubmit" class="btn btn-primary w-100" type="submit" onclick="$.validator.unobtrusive.parse($('form'));">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="auth-footer w-100">
                <div class="copyright mb-3">
                    &copy; Copyright <strong><span>Aliasys.co</span></strong>. All Rights Reserved
                </div>
            </div>
        </div>
    </section>
</div>


@section CustomScripts{
    <script>
        $(window).on("load", function () {
            $('#modal-loader').modal('hide');
        });
        $('form').on('submit', function () {
            var check = $('input:text').val();
            if (check) {
                $('#modal-loader').modal('show');
            }
        })
    </script>
}


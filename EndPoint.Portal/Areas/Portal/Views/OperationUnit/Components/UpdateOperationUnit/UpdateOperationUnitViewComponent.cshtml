@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Aliasys.Application.Services.InternalServices.OperationUnitServices.Commands.UpdateOperationUnit
@model RequestUpdateOperationUnitDto

<form asp-route="updateOperationUnit" autocomplete="off" onsubmit="return jQueryAjaxPost(this);">
    <div class="row mb-3 mt-4">
        <div class="col-12">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Code" class="col-form-label required-field"></label>
                <input asp-for="Code" type="number" class="form-control" placeholder="Enter code" min="1020" step="10" autofocus tabindex="1" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="col-form-label required-field"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter name" maxlength="50" tabindex="2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="mr-1 shadow-z-2 btn btn-warning" onclick="$.validator.unobtrusive.parse($('form'));" tabindex="3">Update</button>
        <button type="button" class="mr-1 shadow-z-2 btn btn-secondary" data-bs-dismiss="modal" tabindex="4">Cancel</button>
    </div>
</form>
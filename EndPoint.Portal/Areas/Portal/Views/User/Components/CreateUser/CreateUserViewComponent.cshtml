@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Aliasys.Application.Services.InternalServices.UserServices.Commands.CreateUser
@model RequestCreateUserDto

<form asp-route="createUser" autocomplete="off" onsubmit="return jQueryAjaxPost(this);">
    <div class="row mb-3 mt-4">
        <div class="col-12">
            <div class="form-group mb-3">
                <label asp-for="UserName" class="col-form-label required-field"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" maxlength="30" autofocus tabindex="1" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DisplayName" class="col-form-label required-field"></label>
                <input asp-for="DisplayName" class="form-control" placeholder="Enter display name" maxlength="50" tabindex="2" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="col-form-label required-field"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" maxlength="50" tabindex="3" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="col-form-label required-field"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" maxlength="11" tabindex="4" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExtentionNumber" class="col-form-label required-field"></label>
                <input asp-for="ExtentionNumber" class="form-control" placeholder="Enter extention number" maxlength="3" tabindex="5" />
                <span asp-validation-for="ExtentionNumber" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked>
                <label asp-for="IsActive" class="form-check-label"></label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="mr-1 shadow-z-2 btn btn-success" onclick="$.validator.unobtrusive.parse($('form'));" tabindex="7">Create</button>
        <button type="button" class="mr-1 shadow-z-2 btn btn-secondary" data-bs-dismiss="modal" tabindex="8">Cancel</button>
    </div>
</form>


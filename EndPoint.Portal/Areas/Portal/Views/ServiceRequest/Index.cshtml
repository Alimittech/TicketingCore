@using EndPoint.Portal.Areas.Portal.ViewComponents.ServiceRequest;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Service Request";
    Layout = "~/Areas/Portal/Views/Shared/_LayoutPortal.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title fw-bold">Dispatch by me</h5>
        <div class="pt-2">
            <div class="row mb-1 mt-4">
                <div class="col-lg-3 col-md-3 col-sm-6">
                    <a id="orgNewServiceRequest" class="btn btn-success" onclick="showInPopup('@Url.RouteUrl("createServiceRequest", null,Context.Request.Scheme)','Create Service Request', 'Create', 'Large')">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        New Request
                    </a>
                </div>
            </div>
            <div class="row mb-3 mt-3">
                <div class="datatable-wrapper datatable-loading no-footer sortable searchable fixed-columns">
                    <div class="datatable-top">
                        <div class="datatable-dropdown">
                            <label>
                                <select class="form-select">
                                    <option value="5">5</option>
                                    <option value="10">10</option>
                                    <option value="15">15</option>
                                    <option value="20">20</option>
                                </select>
                            </label>
                        </div>
                        <div class="datatable-search">
                            <input class="form-control" placeholder="Search..." type="search" title="Search within table">
                        </div>
                    </div>
                    <div class="datatable-container" id="DataTableServiceRequest">
                        @await Component.InvokeAsync(typeof(DataTableServiceRequestViewComponent), new { ViewBag.searchKey, ViewBag.page, ViewBag.pageSize })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section CustomScripts {
    @{
        await Html.RenderPartialAsync("_PartialValidationScripts");
    }
}





